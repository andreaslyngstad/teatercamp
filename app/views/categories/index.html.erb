
<% @page_title = "Bloggkategorier" -%>
<h1>Kategorier</h1>
<p>Administrer blogg kategorier</p>
<table class="table_regular_adm" cellspacing="0" cellpadding="0">
		<tr>
			<th>Kategori</th>
			<th>Beskrivelse</th>
			<th></th>
		</tr>
		
	<% for category in @categories -%>
		<tr>
			<td><%= truncate(h(category.name), :length => 20) %></td>
			<td><%= truncate(h(category.des), :length => 90) %></td>
			<td class="right">
				<%= link_to( 'Oppdater', :action => "index", :id => category) %>&nbsp;
				<%= link_to 'Slett', category, :confirm => 'Er du sikker pÃ¥ at du vil slette denne kategorien?', :method => :delete %>
			</td>
		</tr>
	<% end -%>
</table>

<% form_for(@category, if params[:id].blank? then { :action => "create"} else {:action => "update", :id => @category}end)  do |f|%>
	<ul class="form_layout">	
		<li><label>Kategori</label><%= f.text_field( :name, :size => "12em")%></li>
		<li><label>Beskrivelse</label><%= f.text_field( :des, :size => "50em") %></li>
		<li><label>&nbsp;</label><%= f.submit(params[:id].blank? ? 'Ny kategori' : 'Oppdater kategori',:class => 'submit')  %></li>
	</ul>
<% end -%>

