<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		
				<title><%= @app_name %>=> Admin<%= ": " + @page_title if @page_title%></title>
				<meta name="keywords" content="" />
<meta name="description" content="" />
		<%= stylesheet_link_tag 'admin' %>
		<%= javascript_include_tag :defaults%>
  		<%= javascript_include_tag :fckeditor %>
		
	</head>
	<BODY>
<!-- start header -->

		
<div id="header">
	<div id="header_wrapper">
			<%if logged_in?%>
			<div id="logged_in">
				<p style="font-family:courier new; color:white; font-size:12px">Hei <%= current_user.first_name %>! Du er innlogget.</p> 
				<span style="font-family:courier new; color:white; font-size:15px"><%= link_to "Logg ut","/logout" %> | 
				<%= link_to( "Til siden", root_path) %></span>
				</div>
			<%end%>
		<div id="tabsH">
		<ul>
			<%if controller.controller_name.to_s != "posts" && controller.controller_name.to_s != "categories" && controller.controller_name.to_s != "comments"%>
				<li><%= link_to("<span>Blogg</span>", posts_path ) %></li>
			<%else%>
				<li><span>Blogg</span></li>
			<%end%>
			<% if controller.controller_name.to_s != "data_files" %>
				<li><%= link_to("<span>Bilder</span>", data_files_path ) %></li>
			<%else%>
				<li><span>Bilder</span></li>
			<%end%>
			<% if controller.controller_name.to_s != "pages" %>
				<li><%= link_to("<span>Sider</span>", pages_path  ) %></li>
			<%else%>
				<li><span>Sider</span></li>
			<%end%>
			<% if controller.controller_name.to_s != "users" %>
				<li><%= link_to("<span>Brukere</span>", users_path  ) %></li>
			<%else%>
				<li><span>Brukere</span></li>
			<%end%>
			
			<%if controller.controller_name.to_s != "options" %>
				<li><%= link_to("<span>Innstillinger</span>", options_path ) %></li>
			<%else%>
				<li><span>Innstillinger</span></li>
			<%end%>
			<li><%= link_to_unless_current("<span>Hjem</span>", view_cms_path )%></li>
			
			<% if controller.controller_name.to_s != "camps" %>
				<li><%= link_to("<span>Kurs</span>", camps_path  ) %></li>
			<%else%>
				<li><span>Kurs</span></li>
				<%end%>
			<% if controller.controller_name.to_s != "registrations" %>
				<li><%= link_to("<span>Påmeldinger</span>", registrations_path  ) %></li>
			<%else%>
				<li><span>Påmeldinger</span></li>
				<%end%>
		</ul>
	  </div>
	  <% if controller.controller_name.to_s == "posts" || controller.controller_name.to_s == "categories" || controller.controller_name.to_s == "comments"%>
					<div id="cat_com_blo">
						<% if controller.controller_name.to_s != "posts" %>
			<li><%= link_to("<span>Oppdater blogg</span>", posts_path ) %></li>
				<%else%>
				<li><span>Oppdater blogg</span></li>
				<%end%>
					<% if controller.controller_name.to_s != "categories" %>
			<li><%= link_to("<span>Kategorier</span>", categories_path ) %></li>
				<%else%>
				<li><span>Kategorier</span></li>
				<%end%>
					<% if controller.controller_name.to_s != "comments" %>
			<li><%= link_to("<span>Kommentarer</span>", comments_path ) %></li>
				<%else%>
				<li><span>Kommentarer</span></li>
				<%end%>
				</div>
			<% end %>
	  </div>
	</div>
</div>
<!-- end header -->
<!-- start page -->
	<div id="content">
		<p><center>


</center><p>
	<div id="content_wrapper">
		<br/><br/>
		<% flash.each do |key, msg| %>
    <%= content_tag :div, msg, :class => [key, "_message"], :id => "notice_#{key}" %>
    <% content_tag :script, :type => "text/javascript" do -%>
        new Effect.Fade('notice_<%= key %>', { duration:5 });
    	<% end %>
	<% end %>
		<%= yield  %>		
		<div style="clear:both;"></div>
	</div>
</div>
<!-- end page -->
</body>
</html>

			
	
